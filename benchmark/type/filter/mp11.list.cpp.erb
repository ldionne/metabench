#include <boost/mp11.hpp>
using namespace boost::mp11;

template<typename N>
using is_even = mp_int<N::type::value % 2 == 0>;

<% env[:k].times do |k| %>

using <%= "xs#{k}" %> = mp_list<
    <%= ((k*n+1)..(k*n+n)).map { |i| "mp_int<#{i}>" }.join(', ') %>
>;

#if defined(METABENCH)
using <%= "result#{k}" %> = mp_copy_if<<%= "xs#{k}" %>, is_even>;
#endif

<% end %>

int main() {}
