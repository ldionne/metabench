template<typename N>
using is_even = metal::bool_<N::type::value % 2 == 0>;

using list = metal::list<
    <%= (1..n).map { |i| "metal::int_<#{i}>" }.join(', ') %>
>;

using result = metal::replace_if<list, metal::lambda<is_even>, void>;
